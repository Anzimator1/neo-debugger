{
	"name": "neo-contract-debug",
	"displayName": "neo-contract-debug",
	"description": "Debugger Extension for NEO Smart Contracts",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.36.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onDebug"
	],
	"main": "./out/extension.js",
	"contributes": {
		"debuggers": [
			{
				"type": "neo-contract",
				"label": "NEO Contract Debug",
				"program": "dotnet C:\\Users\\harry\\Source\\neo\\seattle\\debug\\adapter\\bin\\Debug\\netcoreapp2.2\\neo-debug-adapter.dll",
				"configurationAttributes": {
					"launch": {
						"required": [
							"program"
						],
						"properties": {
							"program": {
								"type": "string",
								"description": "Absolute path to AVM file"
							},
							"args": {
								"type": "array",
								"description": "Command line arguments passed to the program.",
								"items": {
									"type": "string"
								},
								"default": []
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"name": "NEO Contract",
						"type": "neo-contract",
						"request": "launch",
						"program": "${workspaceFolder}",
						"args": []
					}
				],
				"configurationSnippets": [
					{
						"label": "Neo Contract Debug: Launch",
						"description": "A new configuration for debugging a NEO Smart Contract",
						"body": {
							"name": "NEO Contract",
							"type": "neo-contract",
							"request": "launch",
							"program": "${workspaceFolder}",
							"args": []
						}
					}
				]
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.36.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.0.0-next.0"
	}
}