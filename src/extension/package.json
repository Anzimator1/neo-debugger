{
	"name": "neo-contract-debug",
	"publisher": "ngd-seattle",
	"displayName": "NEO Smart Contract Debugger",
	"description": "Debugger Extension for NEO Smart Contracts",
	"version": "0.5.0",
	"engines": {
		"vscode": "^1.36.0"
	},
	"categories": [
		"Other"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/neo-project/neo-debugger.git"
	  },
	"activationEvents": [
		"onDebug"
	],
	"main": "./out/extension.js",
	"contributes": {
		"debuggers": [
			{
				"type": "neo-contract",
				"label": "NEO Contract",
				"program": "dotnet C:\\Users\\harry\\Source\\neo\\seattle\\debug\\adapter\\bin\\Debug\\netcoreapp2.2\\neo-debug-adapter.dll",
				"configurationAttributes": {
					"launch": {
						"required": [
							"program"
						],
						"properties": {
							"program": {
								"type": "string",
								"description": "Absolute path to AVM file"
							},
							"args": {
								"type": "array",
								"description": "Command line arguments passed to the program.",
								"default": []
							},
							"storage": {
								"type": "array",
								"items": {
									"type": "object",
									"required": ["key", "value"],
									"properties": {
										"key": { "type": "string" },
										"value": { "type": "string" }
									}
								},
								"default": []
							},
							"runtime": {
								"type": "object",
								"properties": {
									"witnesses": {
										"oneOf":[
											{ 
												"type": "array", 
												"items": "string" 
											},
											{
												"type": "object",
												"required": ["check-result"],
												"properties": {
													"check-result": { "type": "boolean" }
												}
											}
										]
									}
								}
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"name": "NEO Contract",
						"type": "neo-contract",
						"request": "launch",
						"program": "${workspaceFolder}",
						"args": []
					}
				],
				"configurationSnippets": [
					{
						"label": "NEO Contract: Launch",
						"description": "A new configuration for debugging a NEO Smart Contract",
						"body": {
							"name": "NEO Contract",
							"type": "neo-contract",
							"request": "launch",
							"program": "${workspaceFolder}",
							"args": []
						}
					}
				]
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.36.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.0.0-next.0"
	}
}